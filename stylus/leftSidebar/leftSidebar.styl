$sidebarColor = #467ABF;
$menu_color_hover = #2870D0;

.leftSidebar {
  width: 22em;
  position:fixed;
  bottom: 0;
  top: 4.35em
  background-color: $sidebarColor;
  color: white;
  padding: 1.5em;
  overflow-y: scroll;
  font-size: 0.9em;
  
  a {
    color: white;
    text-decoration: none;
  }

  ul {
    margin: 0;
    padding: 0;
    list-style: none;
    margin: auto;
    
    &>li {
      padding: 0.5em 0em;
      font-weight: 600;
     
     //sub-menu 
      &>ul {
        margin-left: 1em;
        
        &>li{
          cursour: pointer;
          padding-left: 1em;

          &:hover {
            background-color: $menu_color_hover;
            font-weight: 600;
          }
        }
      }
    }
  }
  
  .searchRow {
    margin: 1em 0em
  }
  
  .buttonHomeRow {
    display: flex;
    justify-content: center;
    margin: 1em 0em
    
    button {
      width: 80%
    }
  }
  
  .imageRow {
    display: flex;
    justify-content: center;
  }
}